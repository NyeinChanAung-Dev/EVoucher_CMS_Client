@model EVoucher_CMS_Client.Helper.PagingModel<EVoucher_CMS_Client.Models.ResponseModels.GetEVoucherListingResponse>
@using X.PagedList.Mvc.Core;

@if (Model.Results != null)
{
<div class="table-responsive">
    <table class="table table-bordered">
        <thead class="bg-success">
            <tr>
                <th scope="col" class="font-weight-bold">VoucherNo</th>
                <th scope="col" class="font-weight-bold">Title</th>
                <th scope="col" class="font-weight-bold">ExpiryDate</th>
                <th scope="col" class="text-right font-weight-bold">VoucherAmount</th>
                <th scope="col" class="text-right font-weight-bold">SellingPrice</th>
                <th scope="col" class="text-right font-weight-bold">Quantity</th>
                <th scope="col" class="font-weight-bold">Status</th>
                <th scope="col" class="font-weight-bold">View Detail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Results)
            {
<tr>
    <td>@item.VoucherNo</td>
    <td>@item.Title</td>
    <td>@item.ExpiryDate</td>
    <td class="text-right">@String.Format("{0:0,0}", item.VoucherAmount)</td>
    <td class="text-right">@String.Format("{0:0,0}", item.SellingPrice)</td>
    <td class="text-right">@String.Format("{0:0,0}", item.Quantity)</td>
    <td>@item.Status</td>
    <td>
        <div>
            <button class="btn btn-icon btn-info btn-rounded" onclick="ViewEvoucherDetail('@item.VoucherNo')">
                <i class="anticon anticon-eye"></i>
            </button>
        </div>
    </td>
</tr>}
        </tbody>
    </table>
</div>

                <div class="mt-5">
                    <nav>
                        <div class="pagedList">
                            @Html.PagedListPager(Model.Results, page => Url.Action("_EVoucherList", "EVoucher",
                                                                      new { page }), new X.PagedList.Web.Common.PagedListRenderOptions
                                                                      {
                                                                          DisplayLinkToFirstPage = X.PagedList.Web.Common.PagedListDisplayMode.Always,
                                                                          DisplayLinkToLastPage = X.PagedList.Web.Common.PagedListDisplayMode.Always,
                                                                          DisplayLinkToPreviousPage = X.PagedList.Web.Common.PagedListDisplayMode.Always,
                                                                          DisplayLinkToNextPage = X.PagedList.Web.Common.PagedListDisplayMode.Always,
                                                                          MaximumPageNumbersToDisplay = 5,
                                                                          DisplayLinkToIndividualPages = true,
                                                                          UlElementClasses = new[] { "pagination justify-content-center" },
                                                                          LiElementClasses = new[] { "page-item" },
                                                                          PageClasses = new string[] { "page-link btn btn-icon btn-circle btn-sm border-0 btn-hover-info mr-2 my-1" },
                                                                          LinkToPreviousPageFormat = "<i class='ki ki-bold-arrow-back icon-xs'></i>",
                                                                          LinkToNextPageFormat = "<i class='ki ki-bold-arrow-next icon-xs'></i>"
                                                                      })
                        </div>
                        <br />
                    </nav>
                </div> }
                            else
                            {
                <div class="col-md-12 text-center">
                    <br />
                    <img src="~/assets/images/others/no data city app web.png" style="width:200px;height:200px;" />
                    <h4 class="text-bold">No Data Found.</h4>
                    <br />
                </div>}