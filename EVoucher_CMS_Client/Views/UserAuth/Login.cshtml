@model EVoucher_CMS_Client.Models.RequestModels.LoginRequest

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>EVoucher CMS - Login</title>
    <!-- Core css -->
    <link href="~/assets/css/app.min.css" rel="stylesheet" />

</head>

<body>
    <div class="app">
        <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex" style="background-image: url('/assets/images/others/login-3.png')">
            <div class="d-flex flex-column justify-content-between w-100">
                <div class="container d-flex h-100">
                    <div class="row align-items-center w-100">
                        <div class="col-md-7 col-lg-5 m-h-auto">
                            <div class="card shadow-lg">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between m-b-30">
                                        <h2 class="m-b-0">Sign In</h2>
                                    </div>
                                    <form class="form" id="LoginForm" method="post" asp-action="Login">
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="LoginId">Login Id:</label>
                                            <div class="input-affix">
                                                <i class="prefix-icon anticon anticon-user"></i>
                                                <input type="text" class="form-control" asp-for="LoginId" placeholder="Login Id">
                                            </div>
                                            <span id="loginIdError" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="font-weight-semibold" for="password">Password:</label>
                                            <div class="input-affix m-b-10">
                                                <i class="prefix-icon anticon anticon-lock"></i>
                                                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                                            </div>
                                            <span id="PasswordError" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            @{
                                                if (ViewBag.Unauthorize == "Unauthorize")
                                                {
                                                    <div class="form-group">
                                                        <label class="text-danger font-weight-semibold">Wrong LoginID or password !</label>
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <div class="form-group">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <button type="submit" onclick="Validate()" class="btn btn-primary">Sign In</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Core Vendors JS -->
    <script src="~/assets/js/vendors.min.js"></script>
    <!-- Core JS -->
    <script src="~/assets/js/app.min.js"></script>
    <script type="text/javascript">
        function Validate() {
            var loginId = $('#LoginId').val();
            var Password = $('#Password').val();

            if (loginId == null || loginId == "") {
                $('#loginIdError').empty().append("* Required loginId *");
            } else {
                $('#loginIdError').empty();
            }
            if (Password == null || Password == "") {
                $('#PasswordError').empty().append("* Required Password *");
            } else {
                $('#PasswordError').empty();
            }
        }
    </script>
</body>

</html>
